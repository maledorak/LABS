margin-bottom = 5

; vim:ft=dosini

[module/toggl]
type = custom/script

exec = "python $HOME/.scripts/polybar/toggl-widget.py"
interval = 5.0
format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.toggl}
format-underline = ${colors.toggl}
format-padding = 1
; Add below line if you have xdg-utils
click-right = "xdg-open https://toggl.com/app/timer"

[module/todoist]
type = custom/script

exec = "python $HOME/.scripts/polybar/todoist-widget.py"
interval = 60.0
format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.todoist}
format-underline = ${colors.todoist}
format-padding = 1
; Add below line if you have xdg-utils
click-right = "xdg-open https://todoist.com/app/#/today"
